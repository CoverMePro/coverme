{
	"hosting": {
		"public": "packages/client-web/build",
		"ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
		"rewrites": [
			{
				"source": "**",
				"destination": "/index.html"
			}
		]
	},
	"functions": {
		"source": "packages/functions",
		"predeploy": [
			"shx rm -rf \"$RESOURCE_DIR/src/coverme-shared\"",
			"shx cp -R \"$PROJECT_DIR/packages/coverme-shared/.\" \"$RESOURCE_DIR/src/coverme-shared\"",
			"npm --prefix \"$RESOURCE_DIR\" run build"
		]
	}
}
